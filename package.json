{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "PORT=$(node scripts/find-port.js) && next dev --port $PORT --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write $(git diff --cached --name-only --diff-filter=ACMR | grep -E \"\\.(ts|tsx|js|jsx|json|css|scss|md)\" | xargs)",
    "clean": "rm -rf .next out",
    "analyze": "ANALYZE=true next build",
    "export": "next export",
    "deploy": "gh-pages -d out",
    "sentry:release": "node scripts/sentry-release.js",
    "sentry:sourcemaps": "npx @sentry/cli releases files $npm_package_version upload-sourcemaps .next --url-prefix '~/_next'",
    "r2:cors": "node scripts/setup-r2-cors.js",
    "docs:update": "node scripts/update-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:dashboard": "open docs/dashboard.html",
    "docs:check": "npm run docs:validate && npm run docs:update",
    "docs:index": "node scripts/generate-docs-index.js"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.5.0",
    "@sentry/profiling-node": "^10.5.0",
    "@types/nodemailer": "^6.4.17",
    "@vercel/analytics": "^1.5.0",
    "framer-motion": "^12.18.1",
    "lenis": "^1.3.4",
    "next": "15.3.3",
    "nodemailer": "^7.0.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.3.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "critters": "^0.0.20",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "gh-pages": "^6.3.0",
    "prettier": "^3.5.3",
    "typescript": "^5"
  }
}
